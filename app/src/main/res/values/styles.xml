<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="green_button">
        <item name="android:background">@drawable/green_bg</item>
        <item name="android:textColor">@color/kiwiWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="orange_button">
        <item name="android:background">@drawable/orange_bg</item>
        <item name="android:textColor">@color/kiwiWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RegularText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>

    <style name="BoldText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="NormalText14" parent="RegularText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NormalText16" parent="RegularText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NormalText18" parent="RegularText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BoldText18" parent="BoldText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BoldText20" parent="BoldText">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoldText14" parent="BoldText">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="WhiteTitle28" parent="BoldText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="GreyText16" parent="RegularText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="GreyText12" parent="RegularText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>




</resources>
