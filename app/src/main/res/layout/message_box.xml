<?xml version="1.0" encoding="utf-8"?>
<com.kiwi.task.utils.MessageBox
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation"
    android:background="@color/msgboxErrorBg"
    android:paddingTop="32dp"
    android:paddingBottom="12dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp">

    <TextView
        android:id="@+id/message_box_title"
        style="@style/NormalText18"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/message_box_text"
        android:layout_below="@id/message_box_title"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        style="@style/NormalText14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</com.kiwi.task.utils.MessageBox>